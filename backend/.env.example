# ====================
# Database Configuration
# ====================
DB_HOST=localhost
DB_PORT=5432
DB_DATABASE=identragate
DB_USERNAME=postgres
DB_PASSWORD=your_secure_password
DB_SSL=false

# ====================
# Authentication
# ====================
JWT_SECRET=your_jwt_secret_key_minimum_32_characters_long
JWT_EXPIRES_IN=1h
REFRESH_TOKEN_SECRET=your_refresh_token_secret_minimum_32_characters
REFRESH_TOKEN_EXPIRES_IN=7d
BCRYPT_ROUNDS=12

# ====================
# Server Configuration
# ====================
NODE_ENV=development
PORT=3000
FRONTEND_URL=http://localhost:5173
CORS_ORIGINS=http://localhost:5173,http://localhost:3000

# ====================
# Initial Setup
# ====================
REQUIRE_INITIAL_SETUP=true
SETUP_FLAG_PATH=./data/setup-completed.flag
MIN_PASSWORD_LENGTH=12
RECOVERY_PHRASE_WORDS=24
ALLOW_SETUP_RESET=true

# ====================
# Credentials Management
# ====================
DEFAULT_VALIDITY_DAYS=365
MAX_BULK_ISSUE=100

# ====================
# DIDs Configuration
# ====================
ALLOWED_DID_METHODS=key,web,ethr
DEFAULT_DID_METHOD=key
VERIFICATION_TIMEOUT=10000

# ====================
# Email Configuration
# ====================
EMAIL_ENABLED=false
EMAIL_HOST=smtp.example.com
EMAIL_PORT=587
EMAIL_SECURE=false
EMAIL_USER=your_email@example.com
EMAIL_PASSWORD=your_email_password
EMAIL_FROM=noreply@example.com
EMAIL_TEMPLATES_PATH=./templates/email

# ====================
# Logging
# ====================
LOG_LEVEL=info
LOG_FILE_PATH=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=30d